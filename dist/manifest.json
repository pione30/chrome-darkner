{
  "manifest_version": 2,

  "name": "Chrome Darkener",
  "description": "Darken current eyes-burning page",
  "version": "1.1.0",
  
  "icons": {
    "16": "./img/icon.png",
    "48": "./img/icon.png",
    "128": "./img/icon.png"
  },

  "browser_action": {
    "default_icon": "./img/icon.png",
    "default_popup": "popup.html",
    "default_title": "Chrome Darkener"
  },

  "permissions": [
    "activeTab"
  ],

  "background": {
    "scripts": ["./js/hot-reload.js"]
  }
}
